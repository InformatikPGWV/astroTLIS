---
export interface Props {
  title?: string;
  bodyClass?: string;
  hideScrollbar?: boolean;
  hideCursor?:boolean;
}

const {
  title = "PGWV Fehlerportal",
  bodyClass,
  hideScrollbar = false,
  hideCursor = false,
} = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="de">
  <head>
