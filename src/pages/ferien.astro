<script>
  async function getData(url: string) {
    let numberOfTries = 0;
    try {
      return await (await fetch(url)).json();
    } catch (error) {
      numberOfTries++;
      if (numberOfTries <= 5) {
        return;
      }
      return getData(url);
    }
  }

  const requestURL =
    "https://ferien-api.de/api/v1/holidays/NI/" +
    new Date().getFullYear().toString();

  console.log(getData(requestURL));
</script>

